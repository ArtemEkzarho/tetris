{
  "name": "tetris-reactts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node server/index.ts",
    "dev-watch": "nodemon server/index.ts",
    "build": "pnpm i && tsc && pnpm run build-client",
    "build-client": "pnpm --dir client run build"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "mongoose": "^8.5.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.2",
    "nodemon": "^3.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
